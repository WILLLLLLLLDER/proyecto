<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azuloscuro"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="238dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/hiervas"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.- Jugo de naranja: Tome un vaso con jugo de naranja, añada una pisca de sal, una cucharada de miel. Tomar todas las mañanas."
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.- Vinagre de manzana: Poner 2 cucharadas de vinagre de manzana en una taza con agua caliente. Tomar cada noche (Personas con acides y gastritis no tomar)."
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota: Si no presenta mejorias, consulte a su medico"
                android:textColor="@color/blanco"
                android:textSize="10sp"
                android:textStyle="">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:onClick="volver"
        android:id="@+id/btnSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_stilo"
        android:textColor="@color/blanco">

    </Button>
    <Button
        android:onClick="medituber"
        android:id="@+id/btnNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver medicamentos"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_stilo"
        android:textColor="@color/blanco">

    </Button>

</LinearLayout>