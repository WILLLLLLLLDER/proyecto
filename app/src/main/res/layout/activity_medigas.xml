<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azuloscuro"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/medicamentos"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="245dp"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.- Omeprazol: Una capsula después del desayuno. Durante 2 semanas"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.- Pantropazol: Una capsula después del desayuno. Durante 2 semanas"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.- Esomeprazol: Una capsula después del desayuno. Durante 2 semanas"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4.- Antiácidos en gel."
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:textStyle="">

            </TextView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota: Si no presenta mejoría, consulte a su medico"
                android:textColor="@color/blanco"
                android:textSize="10sp"
                android:textStyle="">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:onClick="volver"
        android:id="@+id/btnSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_stilo"
        android:textColor="@color/blanco">

    </Button>
    <Button
        android:onClick="natugas"
        android:id="@+id/btnNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver medicina natural"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_stilo"
        android:textColor="@color/blanco">

    </Button>

</LinearLayout>